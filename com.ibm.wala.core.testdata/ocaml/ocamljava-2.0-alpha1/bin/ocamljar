. "`dirname $0`/common"
OCJ_JAR=`dirname $0`/../lib/ocamljar.jar
case "`uname`" in
  CYGWIN*) OCJ_JAR=`cygpath --mixed "$OCJ_JAR"` ;;
  *) ;;
esac
"$OCJ_JAVA" -Xss8M -jar "$OCJ_JAR" $@
